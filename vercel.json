{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["**/*.js", "**/*.json"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/images",
      "dest": "/api/images",
      "methods": ["GET"]
    },
    {
      "src": "/user/images",
      "dest": "/api/user/images",
      "methods": ["GET"]
    },
    {
      "src": "/upload",
      "dest": "/api/upload",
      "methods": ["POST"]
    }
  ]
}
